.content_post
  .tweet-user-name
    = tweet.user.name
  .tweet-text
    = tweet.text
  .more
    = image_tag tweet.image.url, class: "tweet-image" if tweet.image.present?
    .more_list
      - if user_signed_in? && current_user.id == tweet.user_id
        = link_to '削除', tweet_path(tweet.id), method: :delete
        = link_to '編集', edit_tweet_path(tweet.id), method: :get